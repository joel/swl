#!/usr/bin/env bash

SERVICE_NAME=foo

if [[ -n $1 && $1 == 'production' ]]
then
  echo '==============================================='
  echo '========== BUILD PRODUCTION IMAGE ============'
  echo '==============================================='

  docker build --squash \
  --tag shared/${SERVICE_NAME}:prod \
  .
  # --secret id=master_key,src=config/master.key \
  # .

else
	echo "Build development image"

  docker build --squash \
  --tag shared/${SERVICE_NAME}:dev \
  . -f Dockerfile.dev
fi
